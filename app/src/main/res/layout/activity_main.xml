<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="#012202"
        android:gravity="top|bottom"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"

            android:layout_height="150dp"
            android:layout_margin="60dp"

            app:srcCompat="@drawable/logo"
            />

        <EditText
            android:id="@+id/emailText"
            android:textColorHint="#2C9C04"
            android:textColor="@color/white"
            android:backgroundTint="#3A7C9A"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="40dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:hint="email"
            android:layout_marginVertical="10dp"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/firstPasswordText"

            android:gravity="center"
            android:textColorHint="#2C9C04"
            android:backgroundTint="#3A7C9A"
            android:layout_width="match_parent"
            android:layout_marginVertical="10dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginHorizontal="40dp"
            android:hint="Password"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/secondPasswordText"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textColorHint="#2C9C04"
            android:backgroundTint="#3A7C9A"
            android:layout_marginVertical="10dp"
            android:textColor="@color/white"

            android:layout_marginHorizontal="40dp"
            android:layout_height="wrap_content"
            android:hint="Repeat Password"
            android:textSize="25sp" />

        <Button
            android:id="@+id/submitButton"
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:textColor="#43FB00"
            android:layout_gravity="center"
            android:backgroundTint="#22566E"
            android:layout_height="wrap_content"
            android:text="Get free green passport" />


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>